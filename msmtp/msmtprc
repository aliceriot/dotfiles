# options for all accounts
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# personal gmail
account        personal
host           smtp.gmail.com
port           587
from           alice.writes.wrongs@gmail.com
user           alice.writes.wrongs
password       # put an app password here

# Set a default account
account default : personal
