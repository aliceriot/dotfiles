URxvt*scrollBar:false


URxvt*perl-ext-common: default,matcher,-option-popup,-selection-popup,-realine,tabbedex, osc-xterm-clipboard, fullscreen, font-size
URxvt*matcher.button: 1
URxvt.url-launcher: chromium
!hide tab-bar when only one is open
URxvt.tabbed.autohide: true
!prevent closing last tab from closing terminal
URxvt.tabbed.reopen-on-close: yes
!prevent tabbedex from using its own keybinds
URxvt.keysym.Control-t: perl:tabbedex:new_tab
URxvt.keysym.Control-equal: perl:font-size:increase
URxvt.keysym.Control-minus: perl:font-size:decrease
URxvt.keysym.F11: perl:fullscren:switch
URxvt.keysym.Control-Tab: perl:tabbedex:next_tab
URxvt.font: xft:inconsolata:size=12, \
            xft:inconsolata for Powerline:size=12, \
            xft:otf-ipafont:size=12:antialias=true
